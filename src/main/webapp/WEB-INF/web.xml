<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
  <display-name>Student Hostel Management</display-name>

  <!-- Student and Room Servlets -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.shms.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteStudentServlet</servlet-name>
    <servlet-class>com.shms.controller.DeleteStudentServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>StudentListServlet</servlet-name>
    <servlet-class>com.shms.controller.StudentListServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RoomListServlet</servlet-name>
    <servlet-class>com.shms.controller.RoomListServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddRoomServlet</servlet-name>
    <servlet-class>com.shms.controller.AddRoomServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AllocateRoomServlet</servlet-name>
    <servlet-class>com.shms.controller.AllocateRoomServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EditRoomServlet</servlet-name>
    <servlet-class>com.shms.controller.EditRoomServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteRoomServlet</servlet-name>
    <servlet-class>com.shms.controller.DeleteRoomServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteAllocationServlet</servlet-name>
    <servlet-class>com.shms.controller.DeleteAllocationServlet</servlet-class>
  </servlet>

  <!-- Fee Module Servlets -->
  <servlet>
    <servlet-name>AddFeeServlet</servlet-name>
    <servlet-class>com.shms.controller.AddFeeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>FeePageServlet</servlet-name>
    <servlet-class>com.shms.controller.FeePageServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>FeeListServlet</servlet-name>
    <servlet-class>com.shms.controller.FeeListServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EditFeeServlet</servlet-name>
    <servlet-class>com.shms.controller.EditFeeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteFeeServlet</servlet-name>
    <servlet-class>com.shms.controller.DeleteFeeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateFeeStatusServlet</servlet-name>
    <servlet-class>com.shms.controller.UpdateFeeStatusServlet</servlet-class>
  </servlet>

  <!-- Leave Application Servlets -->
  <servlet>
    <servlet-name>AddLeaveServlet</servlet-name>
    <servlet-class>com.shms.controller.AddLeaveServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LeaveListServlet</servlet-name>
    <servlet-class>com.shms.controller.LeaveListServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateLeaveStatusServlet</servlet-name>
    <servlet-class>com.shms.controller.UpdateLeaveStatusServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EditLeaveServlet</servlet-name>
    <servlet-class>com.shms.controller.EditLeaveServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteLeaveServlet</servlet-name>
    <servlet-class>com.shms.controller.DeleteLeaveServlet</servlet-class>
  </servlet>

  <!-- Servlet Mappings -->
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteStudentServlet</servlet-name>
    <url-pattern>/DeleteStudentServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>StudentListServlet</servlet-name>
    <url-pattern>/StudentListServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RoomListServlet</servlet-name>
    <url-pattern>/RoomListServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddRoomServlet</servlet-name>
    <url-pattern>/AddRoomServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AllocateRoomServlet</servlet-name>
    <url-pattern>/AllocateRoomServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EditRoomServlet</servlet-name>
    <url-pattern>/EditRoomServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteRoomServlet</servlet-name>
    <url-pattern>/DeleteRoomServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteAllocationServlet</servlet-name>
    <url-pattern>/DeleteAllocationServlet</url-pattern>
  </servlet-mapping>

  <!-- Fee Module Servlet Mappings -->
  <servlet-mapping>
    <servlet-name>AddFeeServlet</servlet-name>
    <url-pattern>/AddFeeServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FeePageServlet</servlet-name>
    <url-pattern>/FeePageServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FeeListServlet</servlet-name>
    <url-pattern>/FeeListServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EditFeeServlet</servlet-name>
    <url-pattern>/EditFeeServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteFeeServlet</servlet-name>
    <url-pattern>/DeleteFeeServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateFeeStatusServlet</servlet-name>
    <url-pattern>/UpdateFeeStatusServlet</url-pattern>
  </servlet-mapping>

  <!-- Leave Module Servlet Mappings -->
  <servlet-mapping>
    <servlet-name>AddLeaveServlet</servlet-name>
    <url-pattern>/AddLeaveServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LeaveListServlet</servlet-name>
    <url-pattern>/LeaveListServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateLeaveStatusServlet</servlet-name>
    <url-pattern>/UpdateLeaveStatusServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EditLeaveServlet</servlet-name>
    <url-pattern>/EditLeaveServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteLeaveServlet</servlet-name>
    <url-pattern>/DeleteLeaveServlet</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
</web-app>
